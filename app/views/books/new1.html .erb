<h1>NEW BOOK</h1>
<%= form_with model: @book do |f| %>
  <%= f.label :title %>
  <%= f.text_field :title %>
    <%= f.label :cover %>
  <%= f.text_field :cover %>
  
<div class="form-group">
    <label for="exampleFormControlSelect1">CHOOSE Author!!!</label>
    <select class="form-control" name="book[author_id]">
      <% @authors.each do |author| %>
        <option value="<%= author.id %>"><%= author.name %></option>
      <% end %>  
    </select>
  </div>


    <div class="form-group">
    <label for="exampleFormControlSelect1">CHOOSE TEMA!!!</label>
    <select class="form-control" name="book[topic_id]">
      <% @topics.each do |topic| %>
        <option value="<%= topic.id %>"><%= topic.title %></option>
      <% end %>  
    </select>
  </div>

  <%= f.submit %>
<% end %>